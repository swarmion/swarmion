{
  "name": "@swarmion-full-stack/core",
  "private": true,
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "deploy": "serverless deploy",
    "deploy-production": "serverless deploy --stage production",
    "deploy-staging": "serverless deploy --stage staging",
    "destroy": "serverless remove",
    "destroy-production": "serverless remove --stage production",
    "destroy-staging": "serverless remove --stage staging",
    "format-check": "prettier --check . --ignore-path ../../.prettierignore",
    "format-fix": "prettier --write . --ignore-path ../../.prettierignore",
    "lint-fix": "pnpm linter-base-config --fix",
    "lint-fix-all": "pnpm lint-fix .",
    "linter-base-config": "eslint --ext=js,ts",
    "sls-get-region": "serverless print --path provider.region",
    "test": "nx run format-check && nx run test-linter && nx run test-type && nx run test-unit && nx run test-circular",
    "test-circular": "pnpm depcruise --config -- .",
    "test-linter": "pnpm linter-base-config .",
    "test-type": "tsc",
    "test-unit": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@swarmion-full-stack/serverless-configuration": "1.0.0",
    "@swarmion/serverless-helpers": "^0.28.2"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.29.0",
    "@swarmion-full-stack/core-contracts": "1.0.0",
    "@types/node": "^18.11.18",
    "@vitest/coverage-c8": "0.31.1",
    "dependency-cruiser": "^12.11.1",
    "esbuild": "^0.16.0",
    "eslint": "^8.29.0",
    "serverless": "^3.27.0",
    "serverless-esbuild": "^1.33.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "0.31.1"
  }
}
