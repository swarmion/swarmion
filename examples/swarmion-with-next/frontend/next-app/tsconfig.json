{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "baseUrl": "src",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"]
}
