{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "types": ["node", "vitest/globals"],
    "lib": ["ES2022"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true
  },
  "ts-node": {
    "compilerOptions": {
      // serverless framework uses CJS ðŸ« 
      "module": "CommonJS",
      "moduleResolution": "Node"
    },
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}
