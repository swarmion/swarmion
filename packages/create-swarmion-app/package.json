{
  "name": "create-swarmion-app",
  "description": "Create an app based on the Swarmion template.",
  "version": "0.33.0",
  "contributors": [
    "guillaumeduboc",
    "MaximeVivier",
    "Sc0ra"
  ],
  "license": "MIT",
  "homepage": "https://www.swarmion.dev",
  "bugs": "https://github.com/swarmion/swarmion/issues",
  "repository": "swarmion/swarmion.git",
  "keywords": [
    "app",
    "create",
    "Serverless",
    "Swarmion",
    "Typescript"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "ncc build ./src/index.ts -o ./dist/ --minify --no-cache --no-source-map-register",
    "clean": "rimraf dist *.tsbuildinfo",
    "dev": "ncc build ./src/index.ts -w -o dist/",
    "format-check": "prettier --check . --ignore-path ../../.prettierignore",
    "format-fix": "prettier --write . --ignore-path ../../.prettierignore",
    "lint-fix": "pnpm linter-base-config --fix",
    "lint-fix-all": "pnpm lint-fix .",
    "linter-base-config": "eslint --ext=js,ts",
    "test": "nx run format-check && nx run test-linter && nx run test-type && nx run test-unit && nx run test-circular",
    "test-circular": "pnpm depcruise --config -- src",
    "test-linter": "pnpm linter-base-config .",
    "test-type": "tsc",
    "test-unit": "vitest run --coverage --passWithNoTests",
    "watch": "pnpm clean && concurrently 'pnpm:package-* --watch'"
  },
  "bin": "./dist/index.js",
  "dependencies": {
    "async-retry": "^1.3.3",
    "chalk": "^5.3.0",
    "commander": "^13.0.0",
    "cross-spawn": "^7.0.3",
    "got": "^12.5.3",
    "prettier": "^3.1.1",
    "prompts": "^2.4.2",
    "rimraf": "^6.0.0",
    "tar": "^7.0.0",
    "update-check": "^1.5.4",
    "validate-npm-package-name": "^6.0.0"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.8",
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^20.12.4",
    "@types/prompts": "^2.4.9",
    "@types/tar": "^6.1.10",
    "@types/validate-npm-package-name": "^4.0.2",
    "@vercel/ncc": "^0.38.0",
    "@vitest/coverage-v8": "3.0.4",
    "concurrently": "^9.0.0",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^8.55.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "3.0.5"
  }
}
